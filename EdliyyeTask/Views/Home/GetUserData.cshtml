@using Microsoft.CodeAnalysis.CSharp.Syntax
@model JsonObjectsViewModel 



@{
    ViewData["Title"] = "GetUserData";
}

<h1>Posts</h1>


<table class="table" id="myTable">
    <thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
        <th scope="col">UserId</th>
        <th scope="col">Comments</th>
       
    </tr>
    </thead>
    
    <tbody>
 
    @foreach (var item in Model.userPosts)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Body</td>
            <td>@item.Title</td>
            <td>@item.UserId</td>
         
            
            <td><button data-target="#loginModal" data-toggle="modal" asp-action="" asp-route-id="@item.Id">Comments</button></td>
            
        </tr>
   
    }
  
  
    </tbody>
</table>


@*Modal*@
<div class="modal fade" tabindex="-1" id="loginModal"
     data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Modal</h3>
                <button type="button" class="close" data-dismiss="modal">
                    &times;
                </button>

            </div>
            <div class="modal-body">
                <table class="table" id="myTable">
                    <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">PostId</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Body</th>
                        
       
                    </tr>
                    </thead>
    
                    <tbody>
                   
                        @foreach (var item in Model.userComments.Where(x=>x.PostId==Model.userPosts[0].Id))
                        {

                            <tr>
                                <td>@item.Id</td>
                                <td>@item.PostId</td>
                                <td>@item.Name</td>
                                <td>@item.Email</td>
                                <td>@item.Body</td>


                            </tr>
                        }
                    
                   

                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
            
                <button type="button" class="btn btn-primary"
                        data-dismiss="modal">
                    Close
                </button>
            </div>
        </div>
    </div>
</div>


